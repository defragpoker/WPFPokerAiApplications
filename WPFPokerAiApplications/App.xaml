<Application x:Class="WPFPokerAiApplications.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFPokerAiApplications"
             StartupUri="Views/Windows/MainWindow.xaml">
    
    <Application.Resources>
        <!--Создал словарь ресурсов и подключил на уровень всего приложения-->
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Добавил словарь цветов по адресу-->
                <ResourceDictionary Source= "Resources/Style/Color/Colors.xaml"/>
                
                <!-- Добавил словарь Стиля кнопки по адресу-->
                <ResourceDictionary Source= "Resources/Style/Button/Buttons.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
